<!DOCTYPE html>
<html>

<head>
    <title>Todo App</title>
    <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-4 pt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1 class="text-center">To-Do List</h1>
                <div class="todo card">
                    <div class="card-body">
                        <form action="/" method="POST" class="todo-header form-inline">
                            <div class="form-group mx-sm-3 mb-2">
                                <label class="sr-only"> for="content">Add Task</label>
                                <input class="form-control" type="text" id="content" name="content"
                                    placeholder="Add task">
                            </div>
                            <button class="btn btn-primary mb-2" type="submit"><span
                                    class="fas fa-plus"></span></button>
                        </form>
                        <ul class="todo-list list-unstyled">
                            <% todoTasks.forEach(details=> { %>
                                <% if (details._id==idTask) { %>
                                    <li class="todo-list-item">
                                        <form action="/edit/<%= details._id %>" method="POST">
                                            <input class="form-control" type="text" value="<%= details.content %>"
                                                name="content">
                                            <button class="btn btn-success" type="submit">Confirm</button>
                                            <a href="/" class="btn btn-danger">Cancel</a>
                                        </form>
                                    </li>
                                    <% } else { %>
                                        <li class="todo-list-item">
                                            <div class="todo-list-item-name">
                                                <%= details.content %>
                                            </div>
                                            <a href="/edit/<%= details._id %>" class="edit"> <span
                                                    class="fas fa-edit"></span>
                                            </a>
                                            <a href="/remove/<%= details._id %>" class="remove"> <span
                                                    class="fas fa-times"></span>
                                            </a>
                                        </li>
                                        <% } %>
                                            <% }) %>
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

</html>